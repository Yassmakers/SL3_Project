<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">


    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />


        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:max="100"
            android:progress="100"
            android:progressTint="#FFA500" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_buttons"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="197dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button_update"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#3498db"
            android:text="Verander"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#3498db"
            android:text="Reset Profiel"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button_delete"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#3498db"
            android:text="Verwijder account"
            android:textColor="#ffffff" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="197dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/profile_buttons"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#3498db"
            android:text="Toggle Visibility"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="232dp" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/nav_home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/holo_red_dark"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Home"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/nav_applicants_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/holo_red_dark"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Applicants"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/nav_profile_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/holo_red_dark"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Profile"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/nav_dashboard_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/holo_red_dark"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Dboard"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
